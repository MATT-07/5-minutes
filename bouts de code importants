#chronomètre tentative 1568648348354 : 
import pyxel
import random

pyxel.init(64, 64)
trentièmes = 30
secondes = 10
minutes = 0

def update() :
    global trentièmes,secondes,minutes
    
    
    trentièmes -= 1
    if trentièmes == 0 :
        secondes -= 1
        trentièmes = 30
        
    if secondes == 0 :
        minutes -= 1
        secondes = 59
    
def draw() :
    global trentièmes,secondes,minutes
    
    pyxel.cls(0)
    
    if minutes >= 0 :
        pyxel.text(0, 32, "Timer :"+ str(minutes)+":"+ str(secondes), 8)

pyxel.run(update, draw)
