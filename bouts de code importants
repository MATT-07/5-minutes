#chronomètre tentative 1568648348354 : #ne s'arrête pas à 0:0
import pyxel
import random

pyxel.init(64, 64)
trentièmes = 30
secondes = 59
minutes = 1

def update() :
    global trentièmes,secondes,minutes
    
    trentièmes -= 1
    if trentièmes == 0 :
        secondes -= 1
        trentièmes = 30
        
    if secondes == 0 :
        minutes -= 1
        secondes = 59
    
    if minutes == 0 and secondes == 0 and trentièmes == 0 :
        pyxel.quit()

def draw() :
    global trentièmes,secondes,minutes
    
    pyxel.cls(0)
    pyxel.text(0, 32, "Timer :"+ str(minutes)+":"+ str(secondes), 8)

pyxel.run(update, draw)
